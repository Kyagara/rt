{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rt",
  "version": "0.1.0",
  "identifier": "com.rt.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "rt",
        "width": 1280,
        "height": 720,
        "theme": "Dark",
        "shadow": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:emotes.db", "sqlite:users.db", "sqlite:feeds.db"]
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "rt"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["rpm", "deb","nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}